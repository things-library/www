{
    "schema": "https://thingslibrary.io/schemas/latest/library.json",
    "version": "1.0.0",

    "key": "vehicle",
    "name": "Vehicle",
    "attributes": [
        {
            "key": "make",
            "name": "Make/Brand",
            "type": "enum"
        },
        {
            "key": "model",
            "name": "Model",
            "type": "enum"
        },
        {
            "key": "model_year",
            "name": "Model Year",
            "type": "enum"
        },
        {
            "key": "color",
            "name": "Color",
            "type": "enum"
        },
        {
            "key": "purchase_date",
            "name": "Purchase Date",
            "type": "date"
        },
        {
            "key": "vin",
            "name": "VIN",
            "type": "string"
        },

        {
            "key": "tire_size",
            "name": "Tire Size",
            "description": "Example: 255/60R18",
            "type": "string"
        },
        {
            "key": "tire_pressure_front",
            "name": "Tire Pressure (Front)",
            "type": "int",
            "units": "psi"
        },
        {
            "key": "tire_pressure_rear",
            "name": "Tire Pressure (Rear)",
            "type": "int",
            "units": "psi"
        },

        {
            "key": "oil_type",
            "name": "Oil Type / Viscosity"
        },
        {
            "key": "last_oil_change_date",
            "name": "Last Oil Change (Date)",
            "type": "date"
        },
        {
            "key": "last_oil_change_distance",
            "name": "Last Oil Change (Miles)",
            "type": "int",
            "units": "miles"
        }
    ],
    "attachments": [
        {
            "type": "vehicle_purchase",
            "one_only": true
        },
        { "type": "vehicle_driver" },
        { "type": "vehicle_tire_replacement" },
        { "type": "vehicle_maintenance" },
        {
            "type": "vehicle_insurance",
            "one_only": true
        }
    ]
}